# Basketball Review App Environment Variables
# Copy this file to .env and update with your values

# API Configuration
VITE_API_URL=http://localhost:3001

# Mock Mode Configuration
# Set to 'true' to use mock data instead of real API
VITE_MOCK_API=false

# Initialize mock data with sample players and teams
# Only applies when VITE_MOCK_API=true
VITE_INIT_MOCK_DATA=false

# Logging Configuration
# Enable logging in production (default: only in development)
VITE_ENABLE_LOGGING=false

# Log level: debug | info | warn | error
VITE_LOG_LEVEL=info

# CDK Deployment Configuration (for AWS deployment)
CDK_DEFAULT_ACCOUNT=your-aws-account-id
CDK_DEFAULT_REGION=us-east-1

# Lambda Environment Variables (set during CDK deployment)
# TABLE_NAME=basketball-review-table
# AWS_REGION=us-east-1